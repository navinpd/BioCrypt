<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="wallet.biocrypt.com.biocryptwallet">
    <uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.CAMERA" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/qr_big_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <meta-data android:name="SERVER_URL" android:value="http://192.168.0.192:8080/" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".WalletSetupActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".RegisterTapCardActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".DashBoardActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SimpleScannerActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>